/* 
 *  class Node {
 *    int data;
 *    Node left; 
 *    Node right;
 *    public Node() {
 *      data = 0;
 *    }
 *    public Node(int d)  {
 *      data = d;
 *    }
 *  }
 *
 *  The above class defines a tree node.
 */
// Return the root node of the tree
//static Node buildTree(int arr[], int n) {
  //Node root = null;
  // Complete the function body
  //return root;
//}
static Node buildTree(int arr[], int n) {
    if (n == 0) 
        return null;
    // Create root node
    Node root = new Node(arr[0]);
    // Use a queue to build tree level-wise
    Queue<Node> q = new LinkedList<>();
    q.add(root);
    int i = 1;  // Start from second element
    while (!q.isEmpty() && i < n) {
        Node current = q.poll();
        // Assign left child
        if (i < n) {
            current.left = new Node(arr[i]);
            q.add(current.left);
            i++;
        }
        // Assign right child
        if (i < n) {
            current.right = new Node(arr[i]);
            q.add(current.right);
            i++;
        }
    }
    return root;
}
