class Result {
    // Return true if a pair with the sum k is found, else return false
    static boolean pairSum(int arr[], int n, int k) {
        int left = 0;
        int right = n - 1;
        while (left < right) {
            long sum = (long) arr[left] + arr[right];
            if (sum == k) {
                return true;
            } else if (sum < k) {
                left++;
            } else {
                right--;
            }
        }
        return false;
    }
}
