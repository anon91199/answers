  //static int kSmallest(Node root, int k) {
    // Write your code here
  //}
static int i;
static int count;
static void helper(Node root,int k){
    if(root==null) return;
    helper(root.left,k);
    i++;
    if(i==k){
        count = root.data;
        return;
    }
    helper(root.right,k);
}
static int kSmallest(Node root, int k) {
    helper(root,k);
        return count;
  }
