static int isMaxHeap(int array[], int n) {
    for (int i = 0; i <= (n - 2) / 2; i++) {
        int left = 2 * i + 1;   // left child index
        int right = 2 * i + 2;  // right child index
        if (left < n && array[i] < array[left])
            return 0;
        if (right < n && array[i] < array[right])
            return 0;
    }
    return 1;
}
