class Result {
    // Count leaf nodes (no children)
    static int countLeafs(Node root) {
        if (root == null) 
            return 0;
        // Leaf node if both left and right are null
        if (root.left == null && root.right == null)
            return 1;
        // Recur for left and right subtrees
        return countLeafs(root.left) + countLeafs(root.right);
    }
    // Count non-leaf nodes (have at least one child)
    static int countNonLeafs(Node root) {
        if (root == null) 
            return 0;
        // Non-leaf node if it has at least one child
        if (root.left != null || root.right != null)
            return 1 + countNonLeafs(root.left) + countNonLeafs(root.right);
        // If leaf node, return 0
        return 0;
    }
}
