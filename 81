void BFS(int v) 
{ 
    Queue<Integer> q = new LinkedList<>();
    boolean vis[] = new boolean[V];
    q.add(v);
    while(!q.isEmpty()){
        int curr = q.poll();
        if(!vis[curr]){
            System.out.print(curr+" ");
            vis[curr] = true;
            for(int neighbor:adjVertices.get(curr)){
                if(!vis[neighbor]){
                    q.add(neighbor);
                }
            }
        }
    }
}
